<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grdnt"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".DoctorProfileFragment">


    <EditText
        android:id="@+id/doctorProfilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:enabled="true"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#d9e5f3"
        android:textSize="20sp" />

        <EditText
            android:id="@+id/doctorProfileFileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#FFFFFF"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textColorHint="#d9e5f3"
            android:textSize="20dp"
            android:ems="10"
            android:enabled="false"
            />


    <EditText
        android:id="@+id/doctorProfileUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_margin="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
        android:backgroundTint="#FFFFFF"
            android:textColor="#fff"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#d9e5f3"
            android:textSize="20dp"
            android:enabled="true"
        android:ems="10"
            />


        <EditText
            android:id="@+id/doctorProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:textColor="#fff"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#d9e5f3"
            android:ems="10"
            android:enabled="true"
            android:textSize="20sp"
            />


        <EditText
            android:id="@+id/doctorProfilePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:textColor="#fff"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#d9e5f3"
            android:textSize="20dp"
            android:enabled="true"
            />




        <Button
            android:id="@+id/editDoctorProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#115385"
            android:gravity="center"
            android:text="Edit"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:layout_marginHorizontal="70dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold|italic" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="37dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:visibility="gone" />


    </LinearLayout>
